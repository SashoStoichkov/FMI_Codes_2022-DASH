
@{
    ViewData["Title"] = "Photo";
}

<html>
<head>
    <title>Rubik's Cube</title>
    <link rel="stylesheet" type="text/css" href="~/frontend/css/cube.css" />
    <script src="~/frontend/js/cube.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.min.js"></script>
</head>
<body>
    <div class="grid" id="grid"></div>
    <div id="size-form">
        <label>Enter size (number of cubes): </label>
        <input type="number" name="width" id="width">
        x
        <input type="number" name="height" id="height">
        <button type="submit" onclick="setSize()">Submit</button>
    </div>
    <div id="randomColors">
        <button type="submit" onclick="randomColors()">Randomize Colors</button>
    </div>
    <div id="download" hidden>
        <label>Name of file: </label>
        <input type="text" name="name" id="filename">
        <button type="submit" onclick="downloadImage()">Download Image</button>
    </div>

    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="GetCube">
        

        <label>Enter cube number</label>
        <input type="text" name="cubeX">
        <input type="text" name="cubeY">
        
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit"  value="Upload" />
            </div>
        </div>
    </form>
</body>
</html>


